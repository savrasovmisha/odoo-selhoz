        <field name="arch" type="xml">
            <form string="Форма Отел">
                <sheet>
                    <group>
                        
                        <field name="name"/>
                        <field name="inv_nomer"/>
                        <field name="kod_hoz"/>
                        <field name="krs_hoz_id"/>
                        <field name="date"/>
                        <field name="nomer_lakt"/>
                        <field name="result"/>
