                             <button name="report_print" string="Сводные ведомости" type="object" icon="gtk-print"/>
                        </group>
                        <group string="Аналитический отчет">
                             <button name="report_print_analitic" string="Аналитический отчет" type="object" icon="gtk-print"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

