                        <field name="kol_itog"/>
                        <field name="kol_itog_jiv"/>
                        <field name="kol_itog_mert"/>
                        <field name="kol_telok_jiv"/>
                        <field name="kol_telok_mert"/>
                        <field name="kol_bik_jiv"/>
                        <field name="kol_bik_mert"/>
                        <field name="kol_mert"/>
                       
                        
                       
                        
                    </group>
		            
