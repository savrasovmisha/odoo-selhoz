<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
	<record model="ir.ui.view" id="sklad_trebovanie_nakladnaya_form_view">
        <field name="name">sklad_trebovanie_nakladnaya.form</field>
        <field name="model">sklad.trebovanie_nakladnaya</field>
        <field name="arch" type="xml">
           
            <form string="Форма Требование-накладная">
                <header>
                    <button name="action_draft" type="object"
                            string="Отменить проведение"
                            states="confirmed"/>
                    <button name="action_confirm" type="object"
                            string="Провести" states="draft"
                            class="oe_highlight"/>
                    <button name="action_done" type="object"
                            string="Удалить" 
                            states="draft"  style="margin-left: 100px;"/>
                    
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Номер" attrs="{'readonly': [('state', 'in', ['confirmed',])]}"/>
                            <field name="sklad_sklad_id" attrs="{'readonly': [('state', 'in', ['confirmed',])]}"/>
                            
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', 'in', ['confirmed',])]}"/>
                            <field name="buh_nomen_group_id" attrs="{'readonly': [('state', 'in', ['confirmed',])]}"/>
                            <field name="buh_stati_zatrat_id" attrs="{'readonly': [('state', 'in', ['confirmed',])]}"/>
                        </group>
                      
                        
                        
                    </group>
                    <notebook>
                        <page string="Товары">
                            <field name="sklad_trebovanie_nakladnaya_line" attrs="{'readonly': [('state', 'in', ['confirmed',])]}">
                                <tree string="sklad_trebovanie_nakladnaya_line" editable="botton" >
                                    <field name="nomen_nomen_id"/>
                                    <field name="ed_izm_id"/>
                                    <field name="kol"/>
                                    <field name="buh_nomen_group_id"/>
                                    <field name="buh_stati_zatrat_id"/>
                                    <field name="sklad_sklad_id"/>
                                    <!-- <field name="sorting"/> -->
                                    <field name="sequence" widget="handle"/>
                                    
                                    
                                </tree>
                            </field>
                            
                        </page>
                        <page string="Параметры">
                           <group> 
                                <field name="mol_id"/>
                                <field name="utverdil_id"/>
                                <field name="predsedatel_id"/>
                                <field name="chlen1_id"/>
                                <field name="chlen2_id"/>
                                <field name="chlen3_id"/>
                           </group>  
                            
                         
                            
                        </page>
                    </notebook>
		            
                </sheet>
            </form>
        </field>
    </record>

        <record model="ir.ui.view" id="view_sklad_trebovanie_nakladnaya_tree">
            <field name="name">sklad_trebovanie_nakladnaya.tree</field>
            <field name="model">sklad.trebovanie_nakladnaya</field>
            <field name="arch" type="xml">
                <tree string="Требование-накладная" colors="green:state=='draft';red:state == 'done'">
                    <field name="name" string="Наименование"/>
                    <field name="date"/>
                    <field name="sklad_sklad_id"/>
                    <field name="state"/>
                    
                    
                    
                   
                </tree>
            </field>
        </record>	
	
        <record model="ir.actions.act_window" id="sklad_trebovanie_nakladnaya_list_action">
            <field name="name">Требование-накладная</field>
            <field name="res_model">sklad.trebovanie_nakladnaya</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Создайте первую запись Требование-накладная
                </p>
            </field>
        </record>

        
    </data>
</openerp>

