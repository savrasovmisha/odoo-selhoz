<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record model="ir.ui.view" id="aktiv_remont_form_view">
            <field name="name">aktiv_remont.form</field>
            <field name="model">aktiv.remont</field>
            <field name="arch" type="xml">
                <form string="Форма Ремонты">
                    <sheet>

                        <group>
                            <h1><field name="name" placeholder="Наименование ремонта" attrs="{'invisible': [('is_graph',  '=', False)]}"/></h1>
                        </group>
                        <group>
                            <h1><field name="name_remonta" placeholder="Наименование ремонта" attrs="{'invisible': [('is_graph',  '=', True)]}"/></h1>
                        </group>
                        <group>
                            
                            <field name="aktiv_aktiv_id"/>
                            <field name="company_id" invisible='1'/>
                            <field name="aktiv_type_id" invisible='1'/>
                        </group>
                        <group>
                            <group>
                                
                                <field name="is_graph"/>
                                <field name="aktiv_tr_id" attrs="{'invisible': [('is_graph',  '=', False)]}" domain="[('aktiv_type_id','=', aktiv_type_id)]"/>
                                <field name="aktiv_vid_remonta_id_r" attrs="{'invisible': [('is_graph',  '=', True)]}"/>

                                
                            </group>
                            <group>
                                
                                <field name="date"/>
                                <label for="period"/>
                                <div>
                                     <field name="period" class="oe_inline" />
                                     <field name="period_edizm" class="oe_inline" />
                                     
                                </div>
                                
                            </group>
                        </group>
                       <!--  <group>
                            <group>
                                
                            </group>
                            <group>
                                
                            </group>
                        </group> -->
                        <group>
                            <group string="Стоимость ремонта">
                                <field name="is_raschet_price"/>
                                <field name="price_raboti_r" string="Работы" attrs="{'invisible': [('is_raschet_price',  '=', False)]}"/>
                                <field name="price_raboti" string="Работы" attrs="{'invisible': [('is_raschet_price',  '=', True)]}"/>
                                <field name="price_nomen" string="Метериалы"/>
                                <field name="price" string="Общая стоимость"/>
                                <field name="currency_id"/>
                            </group>
                            <group string="Способ выполнения ремонта">
                                <field name="otvetstvenniy_id" domain="[('parent_id', '=', company_id)]"/>
                                <field name="is_hozsposob"/>
                                <field name="ispolnitel_id" attrs="{'invisible': [('is_hozsposob',  '=', False)]}"  domain="[('parent_id', '=', company_id)]"/>
                                <field name="is_podryad"/>
                                <field name="partner_id" attrs="{'invisible': [('is_podryad',  '=', False)]}" domain="[('company_type','=','company')]"/>
                           
                            </group>
                        </group>

                        

                        <notebook>
                            <page string="Регламентные работы">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_zapolnit"
                                        type="object"
                                        class="oe_stat_button oe_edit_only"
                                        icon="fa-refresh" string="Заполнить"
                                        
                                       >
                                    </button>
                                
                                </div>
                                <field name="aktiv_remont_raboti_line">
                                    <tree string="aktiv_remont_raboti_line" editable="botton" sum="true">
                                        <field name="aktiv_vid_rabot_id"/>
                                        <field name="price" sum="price"/>
                                        <field name="currency_id"/>

                                    </tree>
                                </field>

                                <field name="aktiv_remont_nomen_line">
                                    <tree string="aktiv_remont_nomen_line" editable="botton" sum="true">
                                        <field name="nomen_nomen_id"/>
                                        <field name="ed_izm_id"/>
                                        <field name="kol" sum="kol"/>
                                        <field name="price"/>
                                        <field name="currency_id"/>
                                        <field name="amount" sum="amount"/>
                                       

                                    </tree>
                                </field>
                            </page>
                            
                        </notebook>
                        <notebook colspan="4">
                            <page string="Комментарии">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
    		            
                    </sheet>
                </form>
            </field>
        </record>
	
	
	   <record model="ir.ui.view" id="aktiv_remont_search_view">
            <field name="name">aktiv_remont.search</field>
            <field name="model">aktiv.remont</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Наименование"/>
                    
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="aktiv_remont_list_action">
            <field name="name">Ремонты</field>
            <field name="res_model">aktiv.remont</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Создайте первую запись Ремонты
                </p>
            </field>
        </record>


    </data>
</openerp>
